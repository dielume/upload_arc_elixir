<h2>Show User</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Attachment:</ strong>
    <strong> <%= UploadWeb.ImageUploader.url({@user_image.image, @user_image})%> </strong>
    <img src="<%= UploadWeb.ImageUploader.url({@user_image.image, @user_image})%>"><br>
  </li>

</ul>

<span><%= link "Edit", to: user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: user_path(@conn, :index) %></span>
